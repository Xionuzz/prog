
import java.util.Scanner;

public class Metodo {

    public static void main(String Args[]) {

	int primerOperador = 0;
	int segundoOperador = 0;
	int resultado = 0;
	boolean sumando = true;
	String respuestaUsuario = "";

	Scanner scan = new Scanner(System.in);

	while(sumando){
	    
	    System.out.print("Introduce el primer operador: ");
	    primerOperador = scan.nextInt();
	    scan.reset();
	    
	    System.out.print("Introduce el segundo operador: ");
	    segundoOperador = scan.nextInt();
	    scan.nextLine();

	    resultado = suma(primerOperador, segundoOperador);
	    System.out.println("Resultado= " + resultado);

	    System.out.println("Salir? Y/N");
	    respuestaUsuario = scan.nextLine();

	    if (respuestaUsuario.equalsIgnoreCase("y"))
		sumando = false;
	}
    }

    public static int suma(int primerOperador, int segundoOperador){
	return primerOperador + segundoOperador;
    }
}

